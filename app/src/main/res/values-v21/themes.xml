<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme applied to the application or activity -->
    <style name="BlueTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/BlueActionBar</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
    </style>
    <!-- Tool bar -->
    <style name="BlueActionbar"
           parent="android:Widget.Material.Toolbar">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <!-- Dark Red -->
    <style name="DarkRedTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DarkRedActionBar</item>
        <item name="actionBarStyle">@style/DarkRedActionBar</item>
    </style>
    <style name="DarkRedActionBar"
           parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/dark_red</item>
        <item name="android:titleTextStyle">@style/DarkRedTheme.DarkRedActionBar.TitleTextStyle</item>
        <item name="background">@color/dark_red</item>
        <item name="titleTextStyle">@style/DarkRedTheme.DarkRedActionBar.TitleTextStyle</item>
    </style>
    <style name="DarkRedTheme.DarkRedActionBar.TitleTextStyle"
           parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">@color/black</item>
        <item name="textSize">15sp</item>
        <!--item name="typeFace">bold</item-->
    </style>

</resources>