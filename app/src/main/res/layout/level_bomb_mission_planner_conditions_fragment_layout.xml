<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/level_bomb_conditions_fragment_scroll_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/level_bomb_conditions_fragment_layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/level_expected_weather_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:text="@string/expected_weather"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:id="@+id/level_situation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/level_expected_weather_text_view"
                android:paddingTop="20dp"
                android:text="@string/situation"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/level_winds_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/level_situation_text_view"
                android:layout_alignLeft="@+id/level_situation_text_view"
                android:layout_below="@+id/level_situation_text_view"
                android:paddingTop="20dp"
                android:text="@string/winds"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/level_temperature_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/level_winds_text_view"
                android:layout_alignLeft="@+id/level_winds_text_view"
                android:layout_below="@+id/level_winds_text_view"
                android:paddingTop="20dp"
                android:text="@string/temperature"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/level_cloud_base_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/level_temperature_text_view"
                android:layout_alignLeft="@+id/level_temperature_text_view"
                android:layout_below="@+id/level_temperature_text_view"
                android:paddingTop="20dp"
                android:text="@string/cloud_base"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/level_con_layer_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/level_cloud_base_text_view"
                android:layout_alignLeft="@+id/level_cloud_base_text_view"
                android:layout_below="@+id/level_cloud_base_text_view"
                android:paddingTop="20dp"
                android:text="@string/con_layer"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_altimeter_text_view"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/altimeter"
                android:paddingTop="20dp"
                android:layout_alignLeft="@id/level_cloud_base_text_view"
                android:layout_alignStart="@id/level_cloud_base_text_view"
                android:layout_below="@id/level_con_layer_text_view"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_altimeter_edit_text"
                android:selectAllOnFocus="true"
                android:layout_alignBottom="@+id/level_altimeter_text_view"
                android:inputType="textNoSuggestions"
                android:layout_alignRight="@+id/level_con_layer_edit_text"
                android:layout_alignEnd="@+id/level_con_layer_edit_text"
                android:layout_alignLeft="@+id/level_con_layer_edit_text"
                android:layout_alignStart="@+id/level_con_layer_edit_text"/>

            <Button
                android:id="@+id/level_bomb_conditions_fragment_select_bomb_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_bomb"
                android:layout_below="@+id/level_use_hpa_check_box"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Spinner
                android:id="@+id/level_situation_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/level_situation_text_view"
                android:layout_alignEnd="@+id/level_temperature_edit_text"
                android:layout_alignRight="@+id/level_temperature_edit_text"
                android:layout_alignStart="@+id/level_temperature_edit_text"
                android:layout_alignLeft="@+id/level_temperature_edit_text"
                android:layout_below="@+id/level_expected_weather_text_view"
                android:paddingTop="10dp"
                android:spinnerMode="dropdown"/>

            <EditText
                android:id="@+id/level_winds_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:layout_alignBottom="@+id/level_winds_text_view"
                android:layout_alignEnd="@+id/level_temperature_edit_text"
                android:layout_alignRight="@+id/level_temperature_edit_text"
                android:layout_alignStart="@+id/level_temperature_edit_text"
                android:layout_alignLeft="@+id/level_temperature_edit_text"
                android:inputType="text"/>

            <EditText
                android:id="@+id/level_temperature_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/level_winds_edit_text"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@+id/level_con_layer_edit_text"
                android:layout_alignStart="@+id/level_con_layer_edit_text"
                android:inputType="text"/>

            <EditText
                android:id="@+id/level_con_layer_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:inputType="text"
                android:layout_alignBottom="@+id/level_con_layer_text_view"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/level_con_layer_text_view"
                android:layout_toEndOf="@+id/level_con_layer_text_view"/>

            <EditText
                android:id="@+id/level_cloud_base_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:layout_above="@+id/level_con_layer_text_view"
                android:layout_alignEnd="@+id/level_con_layer_edit_text"
                android:layout_alignRight="@+id/level_con_layer_edit_text"
                android:inputType="text"
                android:layout_toEndOf="@+id/level_con_layer_text_view"
                android:layout_toRightOf="@+id/level_con_layer_text_view"
                android:layout_alignStart="@+id/level_temperature_edit_text"
                android:layout_alignLeft="@+id/level_temperature_edit_text"/>

            <Button
                android:id="@+id/level_bomb_conditions_fragment_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_page"
                android:layout_below="@+id/level_bomb_conditions_fragment_select_bomb_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#D3D3D3"
                android:text="@string/no_weapon_selected"
                android:id="@+id/level_bomb_conditions_fragment_selected_weapon_text_view"
                android:layout_alignBaseline="@+id/level_bomb_conditions_fragment_select_bomb_button"
                android:layout_alignBottom="@+id/level_bomb_conditions_fragment_select_bomb_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/level_con_layer_text_view"
                android:layout_toRightOf="@id/level_con_layer_text_view"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use_hpa"
                android:textStyle="italic"
                android:textColor="#D3D3D3"
                android:id="@+id/level_use_hpa_check_box"
                android:layout_below="@+id/level_altimeter_edit_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>