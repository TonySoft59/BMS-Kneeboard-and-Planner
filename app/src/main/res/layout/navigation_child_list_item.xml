<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_child_list_item_add_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:drawableRight="@android:drawable/btn_star"
        android:drawableEnd="@android:drawable/btn_star"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_child_list_item_name_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingStart="?android:attr/expandableListPreferredChildIndicatorLeft"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toLeftOf="@id/navigation_child_list_item_add_button"
        android:layout_toStartOf="@id/navigation_child_list_item_add_button"/>

</RelativeLayout>