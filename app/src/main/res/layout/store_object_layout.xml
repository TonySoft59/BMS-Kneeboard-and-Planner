<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/store_name_text_view"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/store_weight_text_view"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/store_name_text_view"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/store_name_text_view"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/store_drag_text_view"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/store_weight_text_view"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/store_weight_text_view"/>
</LinearLayout>