<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/level_bomb_parameters_fragment_scroll_view"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/level_bomb_parameters_fragment_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/release_parameters_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:text="@string/release_parameters"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/approach_course_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/release_parameters_text_view"
                    android:paddingTop="20dp"
                    android:text="@string/approach_course"
                    android:labelFor="@+id/approach_course_edit_text"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/approach_course_considerations_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/approach_course_considerations"
                    android:layout_below="@+id/approach_course_text_view"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#D3D3D3"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/approach_course_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/approach_course_considerations_text_view"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:selectAllOnFocus="true"
                    android:layout_toEndOf="@+id/approach_course_text_view"
                    android:layout_toRightOf="@+id/approach_course_text_view"
                    android:inputType="text"/>

            </RelativeLayout>


        </ScrollView>
</RelativeLayout>