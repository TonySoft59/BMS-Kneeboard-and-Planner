<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/level_bomb_parameters_fragment_scroll_view"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/level_bomb_parameters_fragment_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/level_release_parameters_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:text="@string/release_parameters"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/level_approach_course_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/level_release_parameters_text_view"
                    android:paddingTop="20dp"
                    android:text="@string/approach_course"
                    android:labelFor="@+id/level_approach_course_edit_text"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/level_approach_course_considerations_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/approach_course_considerations"
                    android:layout_below="@+id/level_approach_course_text_view"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#D3D3D3"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/level_approach_course_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/level_approach_course_text_view"
                    android:layout_above="@+id/level_approach_course_considerations_text_view"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:selectAllOnFocus="true"
                    android:layout_toEndOf="@+id/space2"
                    android:inputType="text"
                    android:layout_toRightOf="@+id/space2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_target_elevation_text_view"
                    android:layout_below="@+id/level_approach_course_considerations_text_view"
                    android:text="@string/target_elevation"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mean_sea_level"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/level_target_elevation_text_view"
                    android:textStyle="italic"
                    android:id="@+id/level_target_elevation_mean_sea_level"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#D3D3D3"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:selectAllOnFocus="true"
                    android:layout_above="@id/level_target_elevation_mean_sea_level"
                    android:paddingTop="20dp"
                    android:layout_alignBaseline="@+id/level_target_elevation_text_view"
                    android:inputType="textNoSuggestions"
                    android:id="@+id/level_target_elevation_edit_text"
                    android:layout_toEndOf="@+id/level_approach_course_text_view"
                    android:layout_toRightOf="@+id/level_approach_course_text_view"
                    android:layout_alignBottom="@+id/level_target_elevation_text_view"
                    android:layout_alignLeft="@+id/level_approach_course_edit_text"
                    android:layout_alignStart="@+id/level_approach_course_edit_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_altitude_agl_text_view"
                    android:paddingTop="20dp"
                    android:layout_below="@+id/level_target_elevation_mean_sea_level"
                    android:text="@string/select_release_altitude"
                    android:labelFor="@+id/level_release_altitude_edit_text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="italic"
                    android:id="@+id/level_above_ground_level_text_view"
                    android:text="@string/above_ground_level"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#D3D3D3"
                    android:layout_below="@id/level_release_altitude_agl_text_view"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_altitude_agl_edit_text"
                    android:layout_alignParentRight="true"
                    android:selectAllOnFocus="true"
                    android:layout_alignBaseline="@+id/level_release_altitude_agl_text_view"
                    android:layout_above="@id/level_above_ground_level_text_view"
                    android:inputType="textNoSuggestions"
                    android:paddingTop="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/space2"
                    android:layout_alignBottom="@id/level_release_altitude_agl_text_view"
                    android:layout_toRightOf="@+id/space2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_ktas_text_view"
                    android:text="@string/release_ktas"
                    android:layout_below="@id/level_above_ground_level_text_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="20dp"
                    android:labelFor="@+id/level_release_ktas_spinner"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_knots_true_airspeed"
                    android:textStyle="italic"
                    android:text="@string/knots_true_airspeed"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="10dp"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#D3D3D3"
                    android:layout_below="@+id/level_release_ktas_text_view"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_ktas_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="10dp"
                    android:layout_toEndOf="@id/level_approach_course_text_view"
                    android:layout_toRightOf="@+id/level_approach_course_text_view"
                    android:spinnerMode="dropdown"
                    android:layout_above="@+id/level_release_knots_true_airspeed"
                    android:layout_alignLeft="@+id/level_release_altitude_agl_edit_text"
                    android:layout_alignStart="@+id/level_release_altitude_agl_edit_text"
                    android:layout_below="@+id/level_above_ground_level_text_view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_selected_burst_altitude_text_view"
                    android:text="@string/select_burst_altitude"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="10dp"
                    android:layout_below="@id/level_release_knots_true_airspeed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_selected_burst_altitude_label_text_view"
                    android:layout_below="@id/level_selected_burst_altitude_text_view"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#D3D3D3"
                    android:textStyle="italic"
                    android:text="@string/burst_altitude_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_selected_burst_altitude_edit_text"
                    android:inputType="textNoSuggestions"
                    android:selectAllOnFocus="true"
                    android:layout_alignBaseline="@+id/level_selected_burst_altitude_text_view"
                    android:paddingTop="30dp"
                    android:layout_alignBottom="@+id/level_selected_burst_altitude_text_view"
                    android:layout_above="@id/level_selected_burst_altitude_label_text_view"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"
                    android:layout_below="@id/level_release_ktas_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_select_release_mode"
                    android:layout_below="@id/level_selected_burst_altitude_label_text_view"
                    android:text="@string/select_release_mode"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_select_release_mode_label"
                    android:layout_below="@id/level_select_release_mode"
                    android:text="@string/select_release_mode_label"
                    android:textStyle="italic"
                    android:textColor="#D3D3D3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_mode_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:spinnerMode="dropdown"
                    android:layout_toEndOf="@id/level_approach_course_text_view"
                    android:layout_toRightOf="@+id/level_approach_course_text_view"
                    android:paddingTop="10dp"
                    android:layout_below="@id/level_selected_burst_altitude_label_text_view"
                    android:layout_above="@id/level_select_release_mode_label"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_select_ripple_quantity"
                    android:text="@string/select_ripple_quantity"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:paddingTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/level_select_release_mode_label"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_select_ripple_quantity_label"
                    android:layout_below="@id/level_select_ripple_quantity"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="italic"
                    android:textColor="#D3D3D3"
                    android:text="@string/select_ripple_quantity_label"
                    android:textAppearance="?android:textAppearanceSmall"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_select_ripple_quantity_spinner"
                    android:layout_below="@+id/level_select_release_mode_label"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:spinnerMode="dropdown"
                    android:layout_toEndOf="@id/level_approach_course_text_view"
                    android:layout_toRightOf="@+id/level_approach_course_text_view"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"
                    android:layout_above="@id/level_select_ripple_quantity_label"
                    android:paddingTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_select_bomb_spacing_text_view"
                    android:layout_below="@id/level_select_ripple_quantity_label"
                    android:text="@string/select_bomb_spacing"
                    android:paddingTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_select_bomb_spacing_label"
                    android:text="@string/select_bomb_spacing_label"
                    android:layout_below="@id/level_select_bomb_spacing_text_view"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#D3D3D3"
                    android:textStyle="italic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_select_bomb_spacing_edit_text"
                    android:layout_below="@id/level_select_ripple_quantity_spinner"
                    android:layout_above="@id/level_select_bomb_spacing_label"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"
                    android:selectAllOnFocus="true"
                    android:paddingTop="30dp"
                    android:layout_alignBottom="@+id/level_select_bomb_spacing_text_view"
                    android:layout_alignBaseline="@+id/level_select_bomb_spacing_text_view"
                    android:inputType="textNoSuggestions"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_parameters_calculate_button"
                    android:layout_below="@id/level_select_bomb_spacing_label"
                    android:text="@string/calculate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_min_safe_release_altitude_text_view"
                    android:layout_below="@+id/level_release_parameters_calculate_button"
                    android:text="@string/min_safe_release_altitude"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/above_ground_level"
                    android:id="@+id/level_min_safe_release_altitude_agl_label_text_view"
                    android:layout_below="@+id/level_min_safe_release_altitude_text_view"
                    android:textStyle="italic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#D3D3D3"/>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="1px"
                    android:layout_above="@+id/level_approach_course_considerations_text_view"
                    android:layout_toRightOf="@+id/level_approach_course_text_view"
                    android:layout_toEndOf="@+id/level_approach_course_text_view"
                    android:id="@+id/space2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_min_safe_release_altitude_result_text_view"
                    android:text="@string/awaiting_form_info"
                    android:layout_below="@id/level_release_ktas_spinner"
                    android:paddingTop="40dp"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"
                    android:textColor="#D3D3D3"
                    android:textStyle="italic"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_alignBaseline="@+id/level_min_safe_release_altitude_text_view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_determined_release_altitude_text_view"
                    android:text="@string/release_altitude"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_below="@+id/level_min_safe_release_altitude_agl_label_text_view"
                    android:paddingTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mean_sea_level"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/level_determined_release_altitude_text_view"
                    android:textStyle="italic"
                    android:id="@+id/level_determined_release_altitude_label_text_view"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#D3D3D3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_determined_release_altitude_result_text_view"
                    android:text="@string/awaiting_form_info"
                    android:layout_alignParentRight="true"
                    android:textStyle="italic"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBaseline="@+id/level_determined_release_altitude_text_view"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#D3D3D3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_speed_text_view"
                    android:layout_below="@id/level_determined_release_altitude_label_text_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/release_speed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_speed_label_text_view"
                    android:layout_below="@id/level_release_speed_text_view"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="#D3D3D3"
                    android:textStyle="italic"
                    android:text="@string/knots_calibrated_airspeed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_speed_result_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textStyle="italic"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#D3D3D3"
                    android:layout_alignLeft="@id/level_release_ktas_spinner"
                    android:layout_alignStart="@id/level_release_ktas_spinner"
                    android:layout_alignBaseline="@+id/level_release_speed_text_view"
                    android:text="@string/awaiting_form_info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_determined_bomb_range_text_view"
                    android:text="@string/bomb_range"
                    android:paddingTop="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_below="@+id/level_release_speed_label_text_view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_determined_bomb_range_label_text_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="italic"
                    android:textColor="#D3D3D3"
                    android:layout_below="@+id/level_determined_bomb_range_text_view"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:text="@string/bomb_range_label"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_determined_bomb_range_result_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textStyle="italic"
                    android:textColor="#D3D3D3"
                    android:text="@string/awaiting_form_info"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"
                    android:layout_alignBaseline="@+id/level_determined_bomb_range_text_view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_determined_bomb_tof_text_view"
                    android:layout_below="@+id/level_determined_bomb_range_label_text_view"
                    android:text="@string/bomb_tof"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_determined_bomb_tof_label_text_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/level_determined_bomb_tof_text_view"
                    android:textColor="#D3D3D3"
                    android:textStyle="italic"
                    android:text="@string/seconds"
                    android:textAppearance="?android:textAppearanceSmall"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_determined_bomb_tof_result_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#D3D3D3"
                    android:textStyle="italic"
                    android:text="@string/awaiting_form_info"
                    android:layout_alignBaseline="@+id/level_determined_bomb_tof_text_view"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_sight_depression_text_view"
                    android:layout_below="@+id/level_determined_bomb_tof_label_text_view"
                    android:paddingTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/sight_depression"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_sight_depression_label_text_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#D3D3D3"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textStyle="italic"
                    android:text="@string/sight_depression_label"
                    android:layout_below="@+id/level_release_sight_depression_text_view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_release_sight_depression_result_text_view"
                    android:layout_alignBaseline="@+id/level_release_sight_depression_text_view"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#D3D3D3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignLeft="@+id/level_release_ktas_spinner"
                    android:layout_alignStart="@+id/level_release_ktas_spinner"
                    android:text="@string/awaiting_form_info"
                    android:textStyle="italic"/>

                <TextView
