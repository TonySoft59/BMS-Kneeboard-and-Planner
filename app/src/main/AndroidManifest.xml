<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oldgoat5.bmstacticalreference"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.oldgoat5.bmstacticalreference.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.oldgoat5.bmstacticalreference.ListViewPopulateDataBase"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.oldgoat5.bmstacticalreference.KoreaNavigationActivity"
            android:label="@string/korea_theater_title"
            android:theme="@style/BlueTheme">
        </activity>

        <activity
            android:name="com.oldgoat5.bmstacticalreference.BattleForBalkansNavigationActivity"
            android:label="@string/balkans" >
        </activity>

        <activity
            android:name="com.oldgoat5.bmstacticalreference.BrevityDictionaryActivity"
            android:label="@string/brevity_dictionary_title"
            android:theme="@style/BlueTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" >
            </meta-data>
        </activity>

    </application>

</manifest>
